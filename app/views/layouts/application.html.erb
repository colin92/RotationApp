<!DOCTYPE html>
<html>
<head>
  <title>Rotationapp</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class='navbar navbar-static-top' role='navigation'>
	<div class='container'>
		<div class='navbar-header'>
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <%= link_to "RotationApp", root_path, class: 'navbar-brand' %>
		</div>
		<div class='navbar-collapse collapse'>
			<ul class='nav navbar-nav'>	
				<li><%= link_to "My Rotations", root_path %></li>
			</ul>
			<ul class='nav navbar-nav navbar-right'>
				<% if user_signed_in? %>
					<li><p class='navbar-text'>Logged in as <%= current_user.email %></p></li>
					<li><%= link_to "Logout", destroy_user_session_path %></li>
				<% else %>
					<li><%= link_to "Log In", new_user_session_path %></li>
					<li><%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2) %></li>
				<% end %>
				<li></li>
				<li></li>
				<li></li>
			</ul> 
		</div>
	</div>
</div>
	<div class='container'>
		<%= yield %>
	</div>
</body>
</html>
